<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:id="@+id/pedidoLayout"
    android:background="@color/white"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/iconoPedido"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:paddingLeft="14dp"
        android:paddingRight="14dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pedidoIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido nÂº"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/nombreTiendaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tienda"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/estadoPedidoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray" />
        <TextView
            android:id="@+id/numeroProductosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de productos"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>
</LinearLayout>